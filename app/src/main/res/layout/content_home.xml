<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HomeActivity"
    tools:showIn="@layout/activity_home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <EditText
            android:id="@+id/editText4"
            android:layout_width="359dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="44dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="How do you feel?"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@android:color/white"
            android:textSize="44sp" />

        <ImageView
            android:id="@+id/lgreen"
            android:layout_width="87dp"
            android:layout_height="89dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="176dp"
            app:srcCompat="@drawable/two" />

        <ImageView
            android:id="@+id/yellow"
            android:layout_width="105dp"
            android:layout_height="91dp"
            android:layout_alignBottom="@+id/lgreen"
            android:layout_alignParentStart="true"
            android:layout_marginStart="34dp"
            app:srcCompat="@drawable/one" />

        <ImageView
            android:id="@+id/orange"
            android:layout_width="93dp"
            android:layout_height="87dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/red"
            android:layout_marginStart="88dp"
            app:srcCompat="@drawable/four" />

        <ImageView
            android:id="@+id/red"
            android:layout_width="92dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="119dp"
            android:layout_marginEnd="86dp"
            app:srcCompat="@drawable/five" />

        <ImageView
            android:id="@+id/dgreen"
            android:layout_width="114dp"
            android:layout_height="88dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/lgreen"
            android:layout_marginEnd="24dp"
            app:srcCompat="@drawable/three" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="39dp"
            android:text="GO" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>